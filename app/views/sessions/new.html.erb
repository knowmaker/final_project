<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with url: sign_in_path do |f| %>
      <p>
        <%= f.label 'email:'%><br>
        <%= f.text_field :email, id: 'email', class: 'form-control' %>
      </p>
      <p>
        <%= f.label 'password:'%><br>
        <%= f.password_field :password, id: 'password', class: 'form-control' %>
      </p>
      <p>
        <%= f.submit 'Log In', class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
</div>