<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url: sign_in_path, data: { turbo: false } do |f| %>
      <%# if @user.errors.any? %>
        <%# @user.errors.full_messages.each do |msg| %>
<!--          <div class="alert alert-danger"><%#= msg %></div>-->
        <%# end %>
      <%# end %>
      <p>
        <%= f.label 'email:'%><br>
        <%= f.text_field :email, id: 'email', class: 'form-control' %>
      </p>
      <p>
        <%= f.label 'password:'%><br>
        <%= f.password_field :password, id: 'password', class: 'form-control' %>
        <%= link_to 'Forgot your password?', password_reset_path %>
      </p>
      <p>
        <%= f.submit 'Log In', class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
</div>