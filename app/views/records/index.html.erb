<div class="container">
  <% if Current.user.email=='admin@admin.admin' %>
    <%= button_to "Добавить новое объявление", new_record_path,method: :get, :class => 'btn btn-success' %>
  <%end %>
<h1>Все объявления</h1>
<% @record.each do |record| %>
  <%=content_tag(:div, '', :class => (record.status == 'Аукцион объявлен' ? 'alert alert-primary' : 'alert alert-warning')) do%>
    <table>
      <tr>
        <th colspan="2"><h3><%= record.title %></h3></th>
      </tr>
      <tr>
        <td rowspan="2"><%= image_tag record.photo, size: "280x180", crop: :fill %></td>
        <td style="word-wrap: anywhere"><%= record.description %></td>
      </tr>
      <tr>
        <td><h4><%= record.status %></h4></td>
      </tr>
      <tr>
        <% if record.status == 'Аукцион объявлен' %>
        <td colspan="2">Максимальна ставка на данный момент:<%= record.comments.maximum("cost") %>$</td>
          <%else %>
          <td colspan="2">Машина продана за:<%= record.comments.maximum("cost") %>$</td>
          <% end %>
      </tr>
      <tr>
        <td><%= link_to "Подробнее", record_path(record), :class => 'btn btn-outline-primary'%></td>
      </tr>
    </table>
<% end %>
<% end %>
</div>
