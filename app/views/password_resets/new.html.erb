<div class="container">
  <h1>Forgot your password?</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with url: password_reset_path do |f| %>
        <p>
          <%= f.label 'email:' %><br />
          <%= f.text_field :email %>
        </p>
        <p>
          <%= f.submit 'Reset Password' %>
        </p>
      <% end %>
    </div>
  </div>
</div>